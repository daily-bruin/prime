{% import './partials/page_number.njk' as pn %}

{% extends "./layouts/base.njk" %}

{% block content %}
	<div class="column medium-10 medium-centered">
		<div class="latest-stories__container latest-stories_standalone__container">
			<h1 class="latest-stories__title">ALL STORIES</h1>

		 	<div class="row">
 				<form method = "GET" action="/all-stories">
					<input name="q" type="text" placeholder="Search..">
 				</form>
 			</div>

			<div class="row small-collapse">
				{% for story in data.articles %}
					<div class="column small-12">
						{% include "./partials/latest_stories_article.njk" %}
					</div>
				{% endfor %}
			</div>
			<div class="footer-padding"></div>
			<!-- <hr class="hide-for-small-only latest-stories__black-line"> -->
		</div>
	</div>
	
	{{ pn.page_number(data.pageNumber, data.maxPageNumber, data.shouldHaveFirst, data.shouldHaveLast) }}
	
{% endblock %}
