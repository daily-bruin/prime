<div class="m-primary-story-item">
  <div class="mobile-photo">
    <a class="link__article" href="{{ story.path }}">
      <img src="{{ data.mainarticle.cover.imgurl }}">
    </a>
  </div>
  <div class="content">
    <h3>{{ data.mainarticle.section }}</h3>
    <a class="link__article" href="{{data.mainarticle.path }}">
      <h2>{{ data.mainarticle.title }}</h2>
      <h4>BY <span class="author-name">{{ data.mainarticle.author }}</span></h4>
      <p>{{ data.mainarticle.content.excerpt }}</p>
    </a>
  </div>
  <hr class="m-primary-story-item__black-line">
</div>


{% for story in data.articles %}
  <div class="column small-12">
    {% include "./mobile_primary_story_item.njk" %}
  </div>
{% endfor %}
