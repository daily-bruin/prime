<footer>
  <div class="row">
    <div class="medium-3 column text-left">
      <a class="about" href="#">About Prime</a>
    </div>
    <div class="medium-6 column logo-col">
    	<img class="db-logo" src="../../img/db_logo.svg" />
    </div>
    <div class="medium-3 column social-right">
      <ul>
        <li>FB</li>
        <li>INSTA</li>
      </ul>
    </div>
  </div>
</footer>
<script type="text/javascript">
$(document).ready(function() {
  let $window = $(window);
  let $footer = $('footer');
  let ratio = $window.height() / $window.width();
  if (ratio <= 0.65) {
    $footer.removeClass('hidden');
  } else {
    if (!$footer.hasClass('hidden')) {
      $footer.addClass('hidden')
    }
  }
  $window.resize(function() {
    let ratio = $window.height() / $window.width();
    if (ratio <= 0.65) {
      $footer.removeClass('hidden');
    } else {
      if (!$footer.hasClass('hidden')) {
        $footer.addClass('hidden')
    	}
  	}
  });
});
</script> 
